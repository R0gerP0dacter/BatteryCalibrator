<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             />
        
    </LinearLayout>

<ScrollView
android:id="@+id/widget30"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/gradient_test1"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout
android:id="@+id/widget29111"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"
     />


<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>

<LinearLayout
android:id="@+id/widget131"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5px"
android:layout_gravity="center_horizontal"
android:layout_marginBottom="10px"
>
<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/learn_prep_text"
android:textColor="#ffffff"
android:textSize="18sp"
android:layout_gravity="center_vertical"
>
</TextView>
</LinearLayout>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:layout_below="@id/widget131" />
    />

<LinearLayout
android:id="@+id/widget14243"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="5px"
android:layout_marginTop="5px"
>

<TextView
android:id="@+id/widget14598"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Press the Age button to set age to 100%."
android:textSize="18sp"
android:textStyle="bold"
android:textColor="#ffffff"
android:layout_gravity="center_vertical"
>
</TextView>
<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@id/widget14598" />
    />

<LinearLayout
android:id="@+id/widget1423"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5px"
android:layout_marginTop="5px"
android:layout_gravity="center_horizontal"
android:gravity="center"
>
<TextView
android:id="@+id/widget41"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Age: "
android:textSize="18sp"
android:textColor="#ffffff"
android:layout_gravity="center_horizontal"
>
</TextView>

<TextView
android:id="@+id/txtAge"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=""
android:textSize="20sp"
android:textColor="#ffffff"
android:layout_gravity="center_horizontal"
>
</TextView>
</LinearLayout>

<Button
android:id="@+id/btnAge"
android:layout_width="300px"
android:layout_height="150px"
android:text="Set Age Max (100%)"
android:textSize="18sp"
android:layout_gravity="center_horizontal"
corners="android:radius=30dp"
>
</Button>


</LinearLayout>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:layout_below="@id/widget14243" />
    />

<TextView
android:id="@+id/widget145978"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Set desired full40 value and press save."
android:textSize="18sp"
android:textStyle="bold"
android:textColor="#ffffff"
android:layout_gravity="center_vertical"
>
</TextView>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@id/widget145978" />
    />

<LinearLayout
android:id="@+id/widget142355"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5px"
android:layout_marginTop="5px"
android:layout_gravity="center_horizontal"
android:gravity="center"
>
<TextView
android:id="@+id/widget4100"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Full40: "
android:textSize="18sp"
android:textColor="#ffffff"
android:layout_gravity="center_horizontal"
>
</TextView>

<TextView
android:id="@+id/txtFull40"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=""
android:textSize="20sp"
android:textColor="#ffffff"
android:layout_gravity="center_horizontal"
>
</TextView>
</LinearLayout>
<LinearLayout
android:id="@+id/widget150"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5px"
>

<TextView
android:id="@+id/widget151"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Full40:"
android:textSize="20sp"
android:textStyle="bold"
android:textColor="#ffffff"
android:layout_gravity="center_vertical"
>
</TextView>
<EditText
android:id="@+id/etFull40"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="18sp"
android:textStyle="bold"
android:layout_weight="1"
android:inputType="phone"
>
</EditText>
</LinearLayout>



<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:layout_below="@id/widget150" />
    />
    

<LinearLayout
android:id="@+id/widget3111"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="5px"
>
<Button
android:id="@+id/btnSave"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Save"
android:textSize="16sp"
android:layout_weight="2"
>
</Button>
<Button
android:id="@+id/btnCancel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Cancel"
android:textSize="16sp"
android:layout_weight="3"
>
</Button>
</LinearLayout>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>
</LinearLayout>
</ScrollView>    
</TabHost>
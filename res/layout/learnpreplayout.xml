<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
	<ScrollView
		android:id="@+id/widget30"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#ff191919"
		xmlns:android="http://schemas.android.com/apk/res/android" >
		<LinearLayout
			android:id="@+id/widget29111"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" >
			<LinearLayout
				android:id="@+id/widget131"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="4px"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="10px"
				android:gravity="center" >
				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/learn_prep_text"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:layout_gravity="center" >
				</TextView>
			</LinearLayout>

			<View android:id="@+id/divider"
			    android:background="@drawable/gradient_table_row"
			    android:layout_width="fill_parent"
			    android:layout_height="4dp"
			    android:layout_below="@id/widget6966" />

			<LinearLayout
				android:id="@+id/widget14243"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="4px"
				android:layout_marginTop="4px" >
				<TextView
					android:id="@+id/widget14598"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Set desired age to a value between 65-100%."
					android:textSize="18dp"
					android:textColor="#ffffff"
					android:layout_gravity="center" >
				</TextView>
				<LinearLayout
					android:id="@+id/widget1423"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="4px"
					android:layout_marginTop="4px"
					android:layout_gravity="center_vertical"
					android:gravity="center" >
					<TextView
						android:id="@+id/widget41"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Current Battery Age: "
						android:textSize="18dp"
						android:textColor="#ffffff"
						android:layout_gravity="center_vertical" >
					</TextView>
					<TextView
						android:id="@+id/txtAge"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text=""
						android:textSize="18dp"
						android:textColor="#ffffff"
						android:layout_gravity="center_vertical" >
					</TextView>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/widget1506"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="4px" >
					<TextView
						android:id="@+id/widget1516"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Age:"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#ffffff"
						android:layout_gravity="center_vertical" >
					</TextView>
					<EditText
						android:id="@+id/etAge"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="18sp"
						android:layout_weight="1"
						android:inputType="phone">
					</EditText>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/widget31116"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4px" >
					<Button
						android:id="@+id/btnAgeSave"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Save"
						android:textSize="16sp"
						android:layout_weight="2" >
					</Button>
					<Button
						android:id="@+id/btnAgeCancel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Cancel"
						android:textSize="16sp"
						android:layout_weight="3" >
					</Button>
				</LinearLayout>
			</LinearLayout>

			<View android:id="@+id/divider"
			    android:background="@drawable/gradient_table_row"
			    android:layout_width="fill_parent"
			    android:layout_height="4dp"
			    android:layout_below="@id/widget6966" />

			<TextView
				android:id="@+id/widget145978"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Set desired full 40 to a value between 1200-3700."
				android:textSize="18dp"
				android:textColor="#ffffff"
				android:layout_gravity="center" >
			</TextView>
			<LinearLayout
				android:id="@+id/widget142355"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="4px"
				android:layout_marginTop="4px"
				android:layout_gravity="center_vertical"
				android:gravity="center" >
				<TextView
					android:id="@+id/widget4100"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Current Full 40: "
					android:textSize="18sp"
					android:textColor="#ffffff"
					android:layout_gravity="center_vertical" >
				</TextView>
				<TextView
					android:id="@+id/txtFull40"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textSize="18sp"
					android:textColor="#ffffff"
					android:layout_gravity="center_vertical" >
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/widget150"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="4px" >
				<TextView
					android:id="@+id/widget151"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Full40:"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#ffffff"
					android:layout_gravity="center_vertical" >
				</TextView>
				<EditText
					android:id="@+id/etFull40"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:layout_weight="1"
					android:inputType="phone">
				</EditText>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/widget3111"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4px" >
				<Button
				android:id="@+id/btnFull40Save"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Save"
				android:textSize="16sp"
				android:layout_weight="2" >
				</Button>
				<Button
				android:id="@+id/btnFull40Cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cancel"
				android:textSize="16sp"
				android:layout_weight="3" >
				</Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>    
</TabHost>
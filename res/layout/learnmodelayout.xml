<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
	<ScrollView
		android:id="@+id/widget28"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#000000"
		xmlns:android="http://schemas.android.com/apk/res/android" >
		<LinearLayout
			android:id="@+id/widget82"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" >
			<LinearLayout
				android:id="@+id/widget103"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/rectangle"
				android:padding="4px"
				android:layout_marginTop="25px"
				android:orientation="vertical"
				android:layout_gravity="center_horizontal" >
				<TextView
					android:id="@+id/widget104"
					android:layout_width="320px"
					android:layout_height="wrap_content"
					android:text=" Real-Time Voltage (uV): "
					android:gravity="center"
					android:layout_weight="0.5"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal" >
				</TextView>
				<TextView
					android:id="@+id/txtRealTimeVoltage"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rectangle_lighter_shade"
					android:text="3.678 V"
					android:textColor="#ff0000"
					android:textSize="44sp"
					android:gravity="center"
					android:layout_gravity="center_horizontal" >
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/widget103991"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="4px"
				android:layout_marginTop="25px"
				android:layout_gravity="center_horizontal" >
				<LinearLayout
					android:id="@+id/widget10399"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/rectangle"
					android:padding="4px"
					android:layout_marginTop="25px"
					android:layout_marginRight="25px"
					android:orientation="vertical"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
					<TextView
						android:id="@+id/widget10409"
						android:layout_width="190px"
						android:layout_height="wrap_content"
						android:text="Curr. (mA): "
						android:gravity="center"
						android:layout_weight="0.5"
						android:textColor="#ffffff"
						android:textSize="18sp"
						android:layout_gravity="center_horizontal" >
					</TextView>
					<TextView
						android:id="@+id/txtRealTimeCurrent"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/rectangle_lighter_shade"
						android:text=""
						android:textColor="#000000"
						android:textSize="34sp"
						android:gravity="center"
						android:layout_gravity="center_horizontal" >
					</TextView>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/widget103991"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/rectangle"
					android:padding="4px"
					android:layout_marginTop="25px"
					android:orientation="vertical"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
					<TextView
						android:id="@+id/widget104091"
						android:layout_width="190px"
						android:layout_height="wrap_content"
						android:text="Capa. (mAh): "
						android:gravity="center"
						android:layout_weight="0.5"
						android:textColor="#ffffff"
						android:textSize="18sp"
						android:layout_gravity="center_horizontal" >
					</TextView>
					<TextView
						android:id="@+id/txtRealTimeCapacity"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/rectangle_lighter_shade"
						android:text=""
						android:textColor="#000000"
						android:textSize="34sp"
						android:gravity="center"
						android:layout_gravity="center_horizontal" >
					</TextView>
				</LinearLayout>
			</LinearLayout>
	
			<View android:id="@+id/divider"
			    android:background="@drawable/gradient_table_row"
			    android:layout_width="fill_parent"
			    android:layout_height="4dp"
			    android:layout_below="@id/widget6966" />
	    
			<LinearLayout
				android:id="@+id/widget10622"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5px"
				android:layout_gravity="center_horizontal"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/statusreg11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Battery Status Register"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:gravity="center"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
				</TextView>
				<TextView
					android:id="@+id/txtStatusNumber"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=" (0x71)"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:gravity="center"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/widget106"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5px"
				android:layout_gravity="center_horizontal"
				android:orientation="vertical" >
				<ToggleButton android:id="@+id/CHGTFlight" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center_horizontal"
					android:textOff="CHGTF"
					android:textOn="CHGTF" />
			</LinearLayout>
			<TableLayout
				android:id="@+id/widget110"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >
				<TableRow
					android:id="@+id/widget111"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal" >
					<ToggleButton android:id="@+id/AEFlight" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textOff="AEF"
						android:textOn="AEF" />
					<ToggleButton android:id="@+id/SEFlight" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textOff="SEF"
						android:textOn="SEF" />
					<ToggleButton android:id="@+id/LEARNFlight" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textOff="LEARNF"
						android:textOn="LEARNF" />
					<ToggleButton android:id="@+id/UVFlight" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textOff="UVF"
						android:textOn="UVF" />
					<ToggleButton android:id="@+id/PORFlight" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:textOff="PORF"
						android:textOn="PORF" />
				</TableRow>
			</TableLayout>
	
			<View android:id="@+id/divider"
			    android:background="@drawable/gradient_table_row"
			    android:layout_width="fill_parent"
			    android:layout_height="4dp"
			    android:layout_below="@id/widget6966" />
	
			<LinearLayout
				android:id="@+id/widget1066"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="5px"
				android:layout_gravity="center_horizontal"
				android:orientation="vertical" >
				<TextView
					android:id="@+id/message"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Message(s):"
					android:textColor="#ffffff"
					android:textSize="18sp"
					android:gravity="center"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
				</TextView>
				<TextView
					android:id="@+id/txtMessage1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textColor="#ff0000"
					android:textSize="18sp"
					android:gravity="center"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
				</TextView>
				<TextView
					android:id="@+id/txtMessage2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textColor="#ff0000"
					android:textSize="18sp"
					android:gravity="center"
					android:layout_weight="0.5"
					android:layout_gravity="center_horizontal" >
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/widget323"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/rectangle"
				android:layout_marginTop="25px"
				android:padding="4px"
				android:orientation="vertical"
				android:layout_gravity="center_horizontal" >
				<TextView
					android:id="@+id/widget324"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="  Detect Learn Mode  "
					android:textSize="18sp"
					android:textColor="#ffffff"
					android:textStyle="bold" >
				</TextView>
				<RadioGroup
					android:id="@+id/learnmodegroup"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/rectangle_lighter_shade"
					android:orientation="vertical" >
					<RadioButton
						android:id="@+id/btnLearnOn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text=" - ON"
						android:textSize="20sp"
						android:textColor="#000000"
						android:textStyle="bold" >
					</RadioButton>
					<RadioButton
						android:id="@+id/btnLearnOff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text=" - OFF"
						android:textSize="20sp"
						android:textColor="#000000"
						android:textStyle="bold" >
					</RadioButton>
				</RadioGroup>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>    
</TabHost>
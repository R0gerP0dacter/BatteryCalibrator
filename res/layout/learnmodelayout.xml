<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             />
        
    </LinearLayout>
<ScrollView
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:id="@+id/widget82"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/test"
android:orientation="vertical"
>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_height="10dp"
     />



    


<LinearLayout
android:id="@+id/widget103"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/rectangle"
android:padding="2px"
android:layout_marginTop="25px"
android:orientation="vertical"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget104"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" Real-Time Voltage: "
android:textColor="#ffffff"
android:textSize="26sp"
android:textStyle="bold|italic"
android:layout_gravity="center_horizontal"
>
</TextView>



<TextView
android:id="@+id/txtRealTimeVoltage"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/rectangle_lighter_shade"
android:text="3.678 V"
android:textColor="#ff0000"
android:textSize="66sp"
android:gravity="center"
android:layout_gravity="center_horizontal"
>
</TextView>

</LinearLayout>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_marginTop="25px"
    android:layout_height="3dp"
    android:layout_below="@id/widget103" />
    />
    
<LinearLayout
android:id="@+id/widget106"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="5px"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<ToggleButton android:id="@+id/CHGTFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:layout_gravity="center_horizontal"
android:textOff="CHGTF"
android:textOn="CHGTF"
/>
<TextView
android:id="@+id/widget109"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="CHGTF"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
</LinearLayout>
<TableLayout
android:id="@+id/widget110"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
>
<TableRow
android:id="@+id/widget111"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<ToggleButton android:id="@+id/AEFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textOff="AEF"
android:textOn="AEF"

/>
<ToggleButton android:id="@+id/SEFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textOff="SEF"
android:textOn="SEF"

/>
<ToggleButton android:id="@+id/LEARNFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textOff="LEARNF"
android:textOn="LEARNF"
/>
<ToggleButton android:id="@+id/UVFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textOff="UVF"
android:textOn="UVF"

/>
<ToggleButton android:id="@+id/PORFlight" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:textOff="PORF"
android:textOn="PORF"

/>
</TableRow>

<TableRow
android:id="@+id/widget337"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget338"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="AEF"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
<TextView
android:id="@+id/widget339"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="SEF"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
<TextView
android:id="@+id/widget340"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
<TextView
android:id="@+id/widget341"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="UVF"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
<TextView
android:id="@+id/widget342"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="PORF"
android:textSize="16sp"
android:textColor="#000000"
android:layout_gravity="center_horizontal"
>
</TextView>
</TableRow>


</TableLayout>

<View android:id="@+id/divider"
    android:background="@drawable/black_white_gradient"
    android:layout_width="fill_parent"
    android:layout_marginTop="25px"
    android:layout_height="3dp"
    android:layout_below="@id/widget110" />
    />


<LinearLayout
android:id="@+id/widget323"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/rectangle"
android:layout_marginTop="25px"
android:padding="2px"
android:orientation="vertical"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget324"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Detect Learn Mode (ON/OFF)"
android:textSize="18sp"
android:textColor="#ffffff"
android:textStyle="bold"
>
</TextView>
<RadioGroup
android:id="@+id/learnmodegroup"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/rectangle_lighter_shade"
android:orientation="vertical"
>
<RadioButton
android:id="@+id/btnLearnOn"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" - ON"
android:textSize="20sp"
android:textColor="#000000"
android:textStyle="bold"
>
</RadioButton>
<RadioButton
android:id="@+id/btnLearnOff"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" - OFF"
android:textSize="20sp"
android:textColor="#000000"
android:textStyle="bold"
>
</RadioButton>
</RadioGroup>
</LinearLayout>



</LinearLayout>
</ScrollView>

    
</TabHost>
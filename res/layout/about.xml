<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">
    <LinearLayout
		android:id="@+id/widget1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >
	    <TextView
	      android:id="@+id/txtTitle"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:textColor="#ffffff"
	      android:gravity="center"
	      android:textSize="24sp"      
	      android:layout_weight="0.5"      
	      android:layout_gravity="center_horizontal" />
      <TextView
	      android:id="@+id/txtAppName"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp" />
      <TextView
	      android:id="@+id/txtAppVersion"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp" />
      <TextView
	      android:id="@+id/txtAuthor"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="20sp" />
      <TextView
	      android:id="@+id/txtAuthorName"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp" />
      <TextView
	      android:id="@+id/txtDescription"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="20sp"
	      android:text="\nDescription\n" />
      <TextView
	      android:id="@+id/txtAbout"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="14sp" />
      <TextView
	      android:id="@+id/txtSupport"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="20sp" />
      <TextView
	      android:id="@+id/txtSupportText"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:linksClickable="true"
	      android:autoLink="all"
	      android:selectAllOnFocus="false" />
      <TextView
	      android:id="@+id/txtChange"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="20sp"
	      android:text="\nChangelog\n" />
      <TextView
	      android:id="@+id/txt3"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.8 Beta:" />      
      <TextView
	      android:id="@+id/txt33"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Corrected when ACR method is called, request SU permission on ACR being selected, added splash screen (testing feedback opinions), fixed hard-coded age capacity.\n" />
      <TextView
	      android:id="@+id/txt3"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.7 Beta:" />
      <TextView
	      android:id="@+id/txt33"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Add icons (thanks Cosmin), remove tech info pop-up, fix ACR write bug.\n" />
      <TextView
	      android:id="@+id/txt3"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.6 Beta:" />
      <TextView
	      android:id="@+id/txt33"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Cleaned up and commented all classes in code.\n" />
      <TextView
	      android:id="@+id/txt122"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.5 Beta:" />
      <TextView
	      android:id="@+id/txt112"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Added working full40 method and linked to the edit text box in Learn Prep Activity.\n" />
      <TextView
	      android:id="@+id/txt1"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.1 Beta:" />
      <TextView
	      android:id="@+id/txt11"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Added set age to 100% button on second tab layout.\n" />
      <TextView
	      android:id="@+id/txt2"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textStyle="bold"      
	      android:textSize="16sp"
	      android:text="Version 0.8.0 Beta:" />
      <TextView
	      android:id="@+id/txt12"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:textColor="#ffffff"
	      android:textSize="16sp"
	      android:text="Began versioning the app and converted from alpha to beta.\n" />
    </LinearLayout>
</ScrollView>